{% extends 'AppBundle:Default:Community/template.html.twig' %}

{% block title %}
    {{ community.name }}
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    
    {% stylesheets
        '@AppBundle/Resources/public/css/postsList.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
        
{% endblock %}

{% block javascript %}
    {{ parent() }}
    
    {% javascripts
        '@AppBundle/Resources/public/js/Community/posts.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    
    <div class="posts">
        
        {% include 'AppBundle:Default:Etc/PostsList/page.html.twig' %}
        
    </div>
    
{% endblock %}




