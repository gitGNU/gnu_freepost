{% extends 'AppBundle:Default:Home/page.html.twig' %}

{% block content %}
    <div class="cards">
        {% for aCommunity in communities %}
            <a class="none" target="_self" href="{{ url('freepost_community', {'communityName': aCommunity.name}) }}">
                <div class="box community">
                    
                    <img alt="" title="" class="picture" src="{{ aCommunity|communityPicture }}" />
                    
                    <div class="name">
                        {{ aCommunity.name }}
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}


