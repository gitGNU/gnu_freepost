{% extends 'AppBundle:Default:Home/page.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    
    {% stylesheets
        '@AppBundle/Resources/public/css/resetPassword.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
        
{% endblock %}

{% block content %}
    <div class="resetPassword">
        
        <form action="{{ url('freepost_user_update_password') }}" method="post" target="_self" enctype="application/x-www-form-urlencoded">
            <div class="title">
                Choose your new password
            </div>
            <div class="">
                <input type="password" name="password" value="" />
            </div>
            <div class="tip">
                Five characters or more
            </div>
            <div class="title">
                Copy here the code that you have received by email
            </div>
            <div class="">
                <input type="hidden" name="head" value="{{ codeHead }}" />
                <input type="text" name="tail" value="" />
            </div>
            <div class="buttons">
                <input type="submit" class="buttonAction" value="Change password" />
            </div>
        </form>
        
    </div>
{% endblock %}






