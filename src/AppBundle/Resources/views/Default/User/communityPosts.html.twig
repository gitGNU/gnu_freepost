{# This is ajax-called to retrieve and show a list of posts for a given community #}

<div class="header">
    <img alt="" title="" src="{{ url('freepost_community_picture', {'communityHashId': community.hashId}) }}" />
    
    <span class="communityName">{{ community.name }}</span>
    <br />
    <ul class="menu">
        <li>
            <a class="posts" target="_self" href="{{ url('freepost_community', {'communityName': community.name}) }}">
                Posts
            </a>
        </li>
        <li>
            <a class="about" target="_self" href="{{ url('freepost_community_about', {'communityName': community.name}) }}">
                About
            </a>
        </li>
        <li>
            <a class="preferences" target="_self" href="{{ url('freepost_community_preferences', {'communityName': community.name}) }}">
                Preferences
            </a>
        </li>
    </ul>
</div>

<div class="posts">
    {% include 'AppBundle:Default:Etc/PostsList/page.html.twig' %}
</div>